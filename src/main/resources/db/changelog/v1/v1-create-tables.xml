<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="self" id="v1-1">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="roles"/>
                <tableExists tableName="statements"/>
                <tableExists tableName="token"/>
                <tableExists tableName="user_role_junction"/>
                <tableExists tableName="users"/>
            </not>
        </preConditions>

        <createTable tableName="roles">
            <column autoIncrement="true" name="role_id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="roles_pkey"/>
            </column>
            <column name="authority" type="VARCHAR"/>
        </createTable>

        <createTable tableName="statements">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="statements_pkey"/>
            </column>
            <column name="id_of_user" type="INTEGER"/>
            <column name="statement" type="VARCHAR"/>
            <column name="type" type="VARCHAR"/>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <createTable tableName="token">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="token_pkey"/>
            </column>
            <column name="id_of_user" type="INTEGER"/>
            <column name="token" type="VARCHAR"/>
            <column name="expired" type="BOOLEAN"/>
            <column name="type" type="VARCHAR"/>
        </createTable>

        <createTable tableName="user_role_junction">
            <column name="id_user" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_role_junction_pkey"/>
            </column>
            <column name="id_role" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_role_junction_pkey"/>
            </column>
        </createTable>

        <createTable tableName="users">
            <column autoIncrement="true" name="user_id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="users_pkey"/>
            </column>
            <column name="username" type="VARCHAR"/>
            <column name="password" type="VARCHAR"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="id_of_user" baseTableName="statements"
                                 constraintName="statements_id_of_user_fkey" deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="user_id"
                                 referencedTableName="users"/>

        <addForeignKeyConstraint baseColumnNames="id_of_user" baseTableName="token"
                                 constraintName="token_id_of_user_fkey" deferrable="false" initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="user_id"
                                 referencedTableName="users"/>

        <addForeignKeyConstraint baseColumnNames="id_role" baseTableName="user_role_junction"
                                 constraintName="user_role_junction_id_role_fkey" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="NO ACTION"
                                 referencedColumnNames="role_id" referencedTableName="roles"/>

        <addForeignKeyConstraint baseColumnNames="id_user" baseTableName="user_role_junction"
                                 constraintName="user_role_junction_id_user_fkey" deferrable="false"
                                 initiallyDeferred="false" onDelete="CASCADE" onUpdate="NO ACTION"
                                 referencedColumnNames="user_id" referencedTableName="users"/>
    </changeSet>

    <changeSet author="self" id="v1-2">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="users"/>
        </preConditions>

        <loadData tableName="users" file="db/data/users-data.csv"/>
    </changeSet>

    <changeSet author="self" id="v1-3">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="roles"/>
        </preConditions>

        <loadData tableName="roles" file="db/data/roles-data.csv"/>
    </changeSet>

    <changeSet author="self" id="v1-4">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="user_role_junction"/>
        </preConditions>

        <loadData tableName="user_role_junction" file="db/data/user_role_junction-data.csv"/>
    </changeSet>
</databaseChangeLog>
